{
    "name": "snackabra-channelserver",
    "author": "Magnusson Institute",
    "email": "snackabra@gmail.com",
    "description": "Snackabra Channel Server",
    "version": "0.5.x",
    "module": "./src/index.js",
    "bugs": "https://github.com/snackabra/snackabra-roomserver/issues",
    "homepage": "https://snackabra.io",
    "license": "GPL-3.0-only",
    "private": false,
    "scripts": {
        "workerd:dev": "echo 'Running on localhost:4001' && workerd serve config.capnp",
        "workerd": "npm run workerd:watch",
        "workerd:build": "echo 'compiling into 384server' && workerd compile config.capnp > 384server",
        "workerd:nodemon": "nodemon --watch ./src/index.ts -L -e ts --ignore node_modules/ --exec \"npm run workerd:dev\"",
        "workerd:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Workerd\" -c \"green.bold,cyan.bold,magenta.bold,white.bold\"  \"npm run watch-ts\" \"npm run workerd:nodemon\"",
        "watch-ts": "tsc -w",
        "miniflare": "miniflare src/index.js --watch --debug --modules --port 4001 --wrangler-config miniflare.wrangler.toml",
        "cloudflare:dev": "wrangler dev --config ./cloudflare.wrangler.toml",
        "start": "echo 'Running compilation of TS in src' && tsc -w -p ./tsconfig.json"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20.0",
        "concurrently": "^6.0.0",
        "miniflare": "^2.14.0",
        "nodemon": "^2.0.14",
        "typescript": "^5.0.0",
        "wrangler": "^2.19.0"
    }
}

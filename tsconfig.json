{
	// See https://aka.ms/tsconfig.json for details
	"compilerOptions": {
		// LANGUAGE settings
		"allowJs": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"target": "es2022",
		"useDefineForClassFields": true,
		// MODULE specifiers
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		// "module": "esnext",
		// "moduleDetection": "force",
		// "allowSyntheticDefaultImports": true,
		// INPUT / OUTPUT specifiers
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"pretty": false,
		"skipLibCheck": true,

		"strict": true,
		"exactOptionalPropertyTypes": true,
		"useUnknownInCatchVariables": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		// these are implied by "strict", including them for clarity
		// "noImplicitAny": true, // included in strict
		// "alwaysStrict": true, // included in strict
		// "strictNullChecks": true, // included in strict
		// "strictFunctionTypes": true, // included in strict
		// "strictBindCallApply": true, // included in strict
		// "strictPropertyInitialization": true, // included in strict
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/index.ts"
	],
	"exclude": [
		"node_modules"
	],
	"watchOptions": {
		// Use native file system events for files and directories
		"watchFile": "useFsEvents",
		"watchDirectory": "useFsEvents",
		// Poll files for updates more frequently
		// when they're updated a lot.
		"fallbackPolling": "dynamicPriority",
		// Don't coalesce watch notification
		"synchronousWatchDirectory": true,
		// Two additional settings for reducing the amount of possible files to track
		"excludeDirectories": [
			"node_modules",
			"_build"
		],
		// "excludeFiles": ["build/fileWhichChangesOften.ts"]
	}
}
